{
    "settings": {"number_of_shards": 2, "number_of_replicas": 1},
    "mappings": {
        "dynamic"   : "false",
        "_source"   : {"enabled": "true"},
        "properties": {
            "source"        : {"type": "text"},
            "url"           : {"type": "text"},

            "name"          : {"type": "text"},
            "description"   : {"type": "text"},
            "identification": {"type": "text"},
            "development"   : {"type": "text"},
            "damage"        : {"type": "text"},
            "management"    : {"type": "text"},
            "vectors"       : {
                "type"      : "nested",
                "properties": {
                    "vector": {
                        "type": "dense_vector", 
                        "dims": 512
                    },
                    "name"  : {"text": "text"}
                }
            },
            
            "links"         : {
                "type"      : "nested",
                "properties": {
                    "type"  : {"type": "text"},
                    "src"   : {"type": "text"},
                    "link"  : {"type": "text"},
                    "title" : {"type": "text"}
                }
            },
            "vectors_links" : {
                "type"      : "nested",
                "properties": {
                    "vector": {
                        "type": "dense_vector", 
                        "dims": 512
                    },
                    "order"  : {"text": "text"}
                }
            }
        }
    }
}